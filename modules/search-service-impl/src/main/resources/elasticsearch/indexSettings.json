{
  //Copied verbatim from elasticsearch-impl
  "number_of_shards": 3,
  "number_of_replicas": 1,
  "max_result_window": 2147483647,
  "analysis": {
    "analyzer": {
      "lowercasespaceanalyzer": {
        "type": "custom",
        "tokenizer": "whitespace",
        "filter": [
          "lowercase"
        ]
      }
    }
  }
}
